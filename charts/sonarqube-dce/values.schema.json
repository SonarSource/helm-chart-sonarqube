{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "properties": {
        "ApplicationNodes": {
            "properties": {
                "jvmOpts": {
                    "type": "string",
                    "deprecated": true,
                    "$comment": "(DEPRECATED) Please use SONAR_WEB_JAVAOPTS or sonar.web.javaOpts"
                },
                "jvmCeOpts": {
                    "type": "string",
                    "deprecated": true,
                    "$comment": "(DEPRECATED) Please use SONAR_CE_JAVAOPTS or sonar.ce.javaOpts"
                }
            }
        },
        "postgresql": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "deprecated": true,
